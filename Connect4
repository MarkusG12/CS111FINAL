from connect4_pgl import GWindow, GOval, GRect, GTimer
import random
from dataclasses import dataclass

box_dict = {}
num_box = 0
gw = GWindow(600, 700)
for row in range(6):
    for column in range(7):
        num_box += 1
        rect = GRect(column * 50 +100, row * 50 + 100, 50, 50)
        box_dict[rect] = num_box
        gw.add(rect)

